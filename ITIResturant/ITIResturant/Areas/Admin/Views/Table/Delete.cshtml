@using Restaurant.BLL.Model_VM.Table
@model GetAllTableVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminSharedLayout.cshtml";
    ViewData["Title"] = "Tables Management";
}


<div class="card">
    <div class="card-header bg-danger text-white">
        Delete Table
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this table?</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Table Number</dt>
            <dd class="col-sm-9">@Model.TableNumber</dd>

            <dt class="col-sm-3">Capacity</dt>
            <dd class="col-sm-9">@Model.Capacity</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
