                            {
                                
                                if (i <= review.Rating)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        </p>
                        <p class="card-text">"@review.Comment"</p>
                    </div>
                    <div class="card-footer text-muted small">
                        @review.CreatedAt.ToString("MMM dd, yyyy")
                    </div>
                </div>
            </div>
        }
    </div>
