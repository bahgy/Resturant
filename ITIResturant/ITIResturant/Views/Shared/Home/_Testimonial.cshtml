        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title">@review.UserName</h5>
                        <p class="text-warning mb-2">
                            @{
                                
                                var rating = review.Rating;
                            }
