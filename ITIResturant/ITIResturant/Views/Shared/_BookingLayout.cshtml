@* Views/Shared/_BookingLayout.cshtml *@
@using Microsoft.AspNetCore.Mvc.Rendering
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> HtmlHelper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .sidebar {
            width: 220px;
            min-height: 100vh;
        }

        .nav-link.active {
            background-color: #ffc107; /* أصفر/ذهبي */
            color: black !important;
            border-radius: 5px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-dark text-white p-3">
            <h4 class="mb-4">Bookings</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Booking" asp-action="Create"
                       class="nav-link text-white @(ViewData["ActivePage"] as string == "Create" ? "active" : "")">
                        ➕ Create Booking
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Booking" asp-action="GetAll"
                       class="nav-link text-white @(ViewData["ActivePage"] as string == "GetAll" ? "active" : "")">
                        📋 Get All Bookings
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
