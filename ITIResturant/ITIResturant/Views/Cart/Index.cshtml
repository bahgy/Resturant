@using Restaurant.BLL.ModelVM.CartVM
@model CartVM

<div class="container-fluid py-6">
    <div class="container">
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                @if (Model.Items.Any())
                {
                    <div id="cartItems">
                        @foreach (var item in Model.Items)
                        {
                            <div class="cart-item d-flex align-items-center mb-3 border-bottom pb-2">
                                <img src="~/Files/@item.ImageUrl" class="rounded-circle me-3" style="width: 70px; height: 70px;" />
                                <div class="flex-grow-1">
                                    <h5>@item.ProductName</h5>
                                    <p class="text-muted">
                                        <span class="price">@item.Price.ToString("C")</span>
                                        x
                                        <button class="btn btn-sm btn-outline-secondary update-qty" data-product-id="@item.ProductId" data-change="-1">-</button>
                                        <span class="quantity">@item.Quantity</span>
                                        <button class="btn btn-sm btn-outline-secondary update-qty" data-product-id="@item.ProductId" data-change="1">+</button>
                                    </p>
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold me-3">@item.TotalPrice.ToString("C")</span>
                                    <button class="btn btn-sm btn-danger remove-item" data-product-id="@item.ProductId">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div id="emptyCart" class="empty-cart text-center">
                        <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                        <h3>Your cart is empty</h3>
                        <p class="text-muted">Looks like you haven't added any items yet.</p>
                        <a href="@Url.Action("Menu", "Home")" class="btn btn-primary">
                            <i class="fas fa-utensils me-2"></i>Browse Menu
                        </a>
                    </div>
                }
            </div>

            <!-- Cart Summary -->
            <div class="col-lg-4">
                @if (Model.Items.Any())
                {
                    <div class="cart-summary bg-light p-4 rounded shadow-sm">
                        <h4 class="mb-4">Order Summary</h4>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@Model.Items.Count items):</span>
                            <span>@Model.Subtotal.ToString("C")</span>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (8.5%):</span>
                            <span>@Model.Tax.ToString("C")</span>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Delivery Fee:</span>
                            <span>@Model.DeliveryFee.ToString("C")</span>
                        </div>

                        <div class="total-section">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">Total:</h5>
                                <h5 class="mb-0 text-primary">@Model.GrandTotal.ToString("C")</h5>
                            </div>

                            <a class="btn btn-primary checkout-btn w-100" href="@Url.Action("Checkout", "Order")">
                                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                            </a>

                            <div class="text-center mt-3">
                                <a href="@Url.Action("Menu", "Home")" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
