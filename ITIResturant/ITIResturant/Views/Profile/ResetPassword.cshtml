@model Restaurant.BLL.ModelVMProfileVM.ResetPasswordVM
@inject UserManager<AppUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var hasPassword = user != null && await UserManager.HasPasswordAsync(user);
}

<div class="reset-password-container">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h3 class="text-center fw-bold mb-4 text-gradient">🔐 Reset Your Password</h3>

        @if (!hasPassword)
        {
            <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                Set Your Password
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <form asp-controller="Profile" asp-action="ResetPassword" method="post" class="needs-validation" novalidate>
            @if (hasPassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Current Password" />
                    <label asp-for="CurrentPassword">Current Password</label>
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>
            }

            <div class="form-floating mb-3">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                <label asp-for="NewPassword">New Password</label>
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                <label asp-for="ConfirmNewPassword">Confirm New Password</label>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-gradient w-100 py-2 fw-semibold">Change Password</button>
        </form>

    </div>
</div>
@section Scripts {
    <style>
    .reset-password-container {
        max-width: 450px;
        margin: 50px auto;
    }

    .text-gradient {
            background: linear-gradient(90deg, #d4a762, #050709);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .btn-gradient {
            background: linear-gradient(90deg, #d4a762, #050709);
        border: none;
        color: white;
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
                background: linear-gradient(90deg, #d4a762, #050709);
            transform: scale(1.03);
            box-shadow: 0 4px 12px rgba(78, 84, 200, 0.4);
        }

    .card {
        border-radius: 20px !important;
    }

    </style>
}