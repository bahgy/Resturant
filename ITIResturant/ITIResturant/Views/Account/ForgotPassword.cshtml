@model Restaurant.BLL.ModelVMAccountVM.ForgotPasswordVM

<div class="d-flex justify-content-center align-items-center forgot-wrapper">
    <div class="forgot-card shadow-lg">
        <h2 class="text-center mb-3 text-primary">Forgot Password</h2>
        <p class="text-center text-muted mb-4">
            Enter your registered email address and we’ll send you a link to reset your password.
        </p>

        <form asp-action="ForgotPassword" method="post">
            <!-- Validation summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                <input asp-for="Email" placeholder="Email Address" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger small"></span>

            <button type="submit" class="btn btn-primary w-100 mt-3">
                <i class="fa fa-paper-plane"></i> Send Reset Link
            </button>
        </form>

        <hr />

        <div class="text-center">
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary w-100">
                <i class="fa fa-arrow-left"></i> Back to Login
            </a>
        </div>
    </div>
</div>

<style>
    .forgot-wrapper {
        height: 100vh;
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .forgot-card {
        background: #fff;
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 500px;
        width: 100%;
    }

        .forgot-card h2 {
            font-family: 'Playball', cursive;
            font-size: 2.2rem;
        }

    .input-group-text {
        background: #f1f3f5;
        border-radius: 12px 0 0 12px;
        font-size: 1.1rem;
    }

    .form-control {
        border-radius: 0 12px 12px 0;
        font-size: 1.05rem;
        padding: 12px;
    }

    .btn {
        transition: all 0.3s ease;
        font-weight: 600;
        padding: 12px;
        font-size: 1.05rem;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }

    hr {
        margin: 2rem 0;
    }
</style>
