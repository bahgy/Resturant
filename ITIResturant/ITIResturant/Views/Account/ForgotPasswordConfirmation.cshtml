@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="d-flex justify-content-center align-items-center reset-wrapper">
    <div class="reset-card shadow-lg text-center">
        <h2 class="text-primary mb-3">📧 Password Reset Link Sent</h2>
        <p class="text-muted mb-4">
            If an account with that email exists and is confirmed,
            a password reset link has been sent.<br>
            Please check your inbox.
        </p>

        <a asp-controller="Account" asp-action="Login" class="btn btn-success w-100">
            <i class="fa fa-sign-in-alt"></i> Return to Login
        </a>
    </div>
</div>

<style>
    .reset-wrapper {
        height: 100vh;
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .reset-card {
        background: #fff;
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 500px;
        width: 100%;
    }

        .reset-card h2 {
            font-family: 'Playball', cursive;
            font-size: 2.2rem;
        }

    .btn {
        transition: all 0.3s ease;
        font-weight: 600;
        padding: 12px;
        font-size: 1.05rem;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }
</style>
