@model Restaurant.BLL.ModelVMAccountVM.ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center reset-wrapper">
    <div class="reset-card shadow-lg">
        <h2 class="text-center text-primary mb-4">🔑 Reset Password</h2>

        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">
                <i class="fa fa-check-circle"></i> Reset Password
            </button>
        </form>
    </div>
</div>

<style>
    .reset-wrapper {
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        padding: 20px;
    }

    .reset-card {
        background: #fff;
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 500px;
        width: 100%;
    }

        .reset-card h2 {
            font-family: 'Playball', cursive;
            font-size: 2rem;
        }

    .btn {
        font-weight: 600;
        padding: 12px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }
</style>
