@model Resturant.BLL.ModelVm.PaymentVm.CreatePaymentVm
@using Restaurant.DAL.Enum
@{
    Layout = "_CheckoutLayout";
    ViewBag.Title = "Checkout Payment";
}


<h2>Checkout Payment</h2>

<form asp-action="ProcessPayment" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <select asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()" class="form-control">
            <option value="">-- Select Payment Method --</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Pay Now</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
