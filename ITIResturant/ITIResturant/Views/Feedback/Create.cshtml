
@using Restaurant.BLL.Model_VM.Feedback
 @model Restaurant.DAL.Entities.Feedback 


<h2>Add Feedback</h2>




<form asp-action="Create" method="post" class="p-4 rounded shadow" style="background-color:#fff3e0;">
    <div class="form-group mb-3">
        <label asp-for="Comment" class="form-label fw-bold" style="color:#e65100;"></label>
        <input asp-for="Comment" class="form-control border-2" style="border-color:#ff9800;" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Rating" class="form-label fw-bold" style="color:#e65100;"></label>
        <input asp-for="Rating" class="form-control border-2" style="border-color:#ff9800;" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" 
            class="btn fw-bold px-4 py-2 shadow" 
            style="background-color:#ff9800; color:white; border:none; border-radius:8px;">
        Save
    </button>
</form>
