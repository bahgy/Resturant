@model DAL.Entities.EmailNotification

@{
    ViewData["Title"] = "Email Notification Details";
}

<h2 class="mb-4">Email Notification Details</h2>

<div class="card p-4 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">To Address</dt>
        <dd class="col-sm-9">@Model.ToAddress</dd>

        <dt class="col-sm-3">Subject</dt>
        <dd class="col-sm-9">@Model.Subject</dd>

        <dt class="col-sm-3">Body</dt>
        <dd class="col-sm-9">@Model.Body</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.status</dd>

        <dt class="col-sm-3">Sent Time</dt>
        <dd class="col-sm-9">@Model.SentTime</dd>

      @*   <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Customer?.Name</dd> *@
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

