@model DAL.Entities.EmailNotification
 @{
    Layout = "_Layout";
}
 
@{
    ViewData["Title"] = "Create Email Notification";
}

<div class="p-4 rounded shadow" style="background-color:#fff3e0;">
    <h2 class="mb-4 fw-bold" style="color:#e65100;">Create Email Notification</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert fw-bold shadow-sm" 
             style="background-color:#ffe0b2; color:#e65100; border:1px solid #ff9800;">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="ToAddress" class="form-label fw-bold" style="color:#e65100;"></label>
            <input asp-for="ToAddress" class="form-control border-2" style="border-color:#ff9800;" placeholder="Customer Email" />
            <span asp-validation-for="ToAddress" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Subject" class="form-label fw-bold" style="color:#e65100;"></label>
            <input asp-for="Subject" class="form-control border-2" style="border-color:#ff9800;" placeholder="Subject" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Body" class="form-label fw-bold" style="color:#e65100;"></label>
            <textarea asp-for="Body" class="form-control border-2" style="border-color:#ff9800;" placeholder="Message body"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Type" class="form-label fw-bold" style="color:#e65100;"></label>
            <select asp-for="Type" class="form-control border-2" style="border-color:#ff9800;">
                <option>Order</option>
                <option>Reservation</option>
                <option>Promotion</option>
            </select>
        </div>

        <button type="submit" 
                class="fw-bold px-4 py-2 shadow" 
                style="background-color:#ff9800; color:white; border:none; border-radius:8px;">
            Send Notification
        </button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}