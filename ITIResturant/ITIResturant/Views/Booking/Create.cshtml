
@using Restaurant.BLL.Model_VM.Booking

@model CreateBookingVM


@{
    Layout = "NewLayout";
    ViewData["ActivePage"] = "Create"; 
}

@section Sidebar {
    <!-- هنا بيتكرر نفس الـ Sidebar -->
    <div class="sidebar bg-light border-end p-3">
        <h5 class="text-dark mb-4 fw-bold"> Bookings</h5>
        <ul class="nav flex-column gap-2">
            <li class="nav-item">
                <a asp-controller="Booking" asp-action="Create"
                   class="btn w-100 text-start d-flex align-items-center gap-2 sidebar-btn">
                    <i class="bi bi-plus-circle"></i> Create Booking
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Booking" asp-action="GetAll"
                   class="btn w-100 text-start d-flex align-items-center gap-2 active-btn">
                    <i class="bi bi-list-ul"></i> Get All Bookings
                </a>
            </li>
        </ul>
    </div>
}

<h2>Create Booking</h2>


<div class="card">
    <div class="card-header" style="background-color:#D4A762; color:white">
        Create Booking
    </div>
    <div class="card-body">

        @if (ViewBag.error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.error
            </div>
        }

        <form enctype="multipart/form-data"
              asp-action="Create" asp-controller="Booking">

            <!-- Booking Date -->
            <div class="mb-3">
                <label asp-for="BookingDate" class="form-label"></label>
                <input type="date" asp-for="BookingDate" class="form-control" />
                <span class="text-danger" asp-validation-for="BookingDate"></span>
            </div>

            <!-- Start Time -->
            <div class="mb-3">
                <label asp-for="StartTime" class="form-label"></label>
                <input type="time" asp-for="StartTime" class="form-control" />
                <span class="text-danger" asp-validation-for="StartTime"></span>
            </div>

            <!-- End Time -->
            <div class="mb-3">
                <label asp-for="EndTime" class="form-label"></label>
                <input type="time" asp-for="EndTime" class="form-control" />
                <span class="text-danger" asp-validation-for="EndTime"></span>
            </div>

            <!-- Number Of Guests -->
            <div class="mb-3">
                <label asp-for="NumberOfGuests" class="form-label"></label>
                <input type="number" asp-for="NumberOfGuests" class="form-control" />
                <span class="text-danger" asp-validation-for="NumberOfGuests"></span>
            </div>

            <!-- Status -->
            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <input type="text" asp-for="Status" class="form-control" />
                <span class="text-danger" asp-validation-for="Status"></span>
            </div>

            <!-- Special Requests -->
            <div class="mb-3">
                <label asp-for="SpecialRequests" class="form-label"></label>
                <textarea asp-for="SpecialRequests" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="SpecialRequests"></span>
            </div>

            <!-- Customer Id -->
            <div class="mb-3">
                <label asp-for="CustomerId" class="form-label"></label>
                <input type="number" asp-for="CustomerId" class="form-control" />
                <span class="text-danger" asp-validation-for="CustomerId"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Table Number</label>
                <select asp-for="TableId" asp-items="ViewBag.Tables" class="form-control">
                    <option value="">-- Select Table --</option>
                </select>
                <span class="text-danger" asp-validation-for="TableId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
