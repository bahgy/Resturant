@using Restaurant.BLL.Model_VM.Booking
@model EditBookingVM

@{
    ViewData["Title"] = @SharedLocalizer["Edit Booking"];
}

<div class="d-flex justify-content-center mt-4">
    <div class="card shadow-lg rounded-3" style="width: 700px; border:none;">
        <div class="card-header text-center" style="background-color:#D4A762; color:white; font-size:22px; font-weight:bold;">
            @SharedLocalizer["Edit Booking"]
        </div>
        <div class="card-body p-4" style="background-color:#f9f9f9;">

            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.error
                </div>
            }

            <form asp-action="Edit" asp-controller="Booking" method="post" class="row g-3">
                <!-- لازم تبعت الـ Id -->
                <input type="hidden" asp-for="Id" />

                <!-- Booking Date -->
                <div class="col-md-6">
                    <label asp-for="BookingDate" class="form-label fw-semibold">@SharedLocalizer["Reservation Date"]</label>
                    <input type="date" asp-for="BookingDate" class="form-control border-2" />
                    <span class="text-danger" asp-validation-for="BookingDate"></span>
                </div>

                <!-- Start Time -->
                <div class="col-md-6">
                    <label asp-for="StartTime" class="form-label fw-semibold">@SharedLocalizer["Reservation Time"]</label>
                    <input type="time" asp-for="StartTime" class="form-control border-2" />
                    <span class="text-danger" asp-validation-for="StartTime"></span>
                </div>

                <!-- Number Of Guests -->
                <div class="col-md-6">
                    <label asp-for="NumberOfGuests" class="form-label fw-semibold">@SharedLocalizer["How many persons?"]</label>
                    <input type="number" asp-for="NumberOfGuests" class="form-control border-2" />
                    <span class="text-danger" asp-validation-for="NumberOfGuests"></span>
                </div>


                <!-- Table Number -->
                <div class="col-md-6">
                    <label class="form-label fw-semibold">@SharedLocalizer["Table Number"]</label>
                    <select asp-for="TableId" asp-items="ViewBag.Tables" class="form-control border-2">
                        <option value="">@SharedLocalizer["-- Select Table --"]</option>
                    </select>
                    <span class="text-danger" asp-validation-for="TableId"></span>
                </div>

                <!-- Special Requests -->
                <div class="col-12">
                    <label asp-for="SpecialRequests" class="form-label fw-semibold">@SharedLocalizer["Special Requests / Notes"]</label>
                    <textarea asp-for="SpecialRequests" class="form-control border-2"></textarea>
                    <span class="text-danger" asp-validation-for="SpecialRequests"></span>
                </div>

                <!-- Submit + Cancel -->
                <div class="col-12 text-center mt-3">
                    <button type="submit" class="btn px-5 py-2"
                            style="background-color:#D4A762; color:white; font-weight:bold; border-radius:8px;">
                        @SharedLocalizer["Update"]
                    </button>
                    <a asp-action="GetAll" class="btn px-4 py-2 ms-2"
                       style="background-color:#6c757d; color:white; font-weight:bold; border-radius:8px;">
                        @SharedLocalizer["Cancel"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
