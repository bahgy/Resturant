@using BIL.Model_VM.Booking

@model List<GetAllBookingVM>


@{
    Layout = "NewLayout";
    ViewData["ActivePage"] = "GetAll"; // عشان يظبط الزرار Active
}

@section Sidebar {
    <!-- هنا بيتكرر نفس الـ Sidebar -->
    <div class="sidebar bg-light border-end p-3">
        <h5 class="text-dark mb-4 fw-bold">📌 Bookings</h5>
        <ul class="nav flex-column gap-2">
            <li class="nav-item">
                <a asp-controller="Booking" asp-action="Create"
                   class="btn w-100 text-start d-flex align-items-center gap-2 sidebar-btn">
                    <i class="bi bi-plus-circle"></i> Create Booking
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Booking" asp-action="GetAll"
                   class="btn w-100 text-start d-flex align-items-center gap-2 active-btn">
                    <i class="bi bi-list-ul"></i> Get All Bookings
                </a>
            </li>
        </ul>
    </div>
}


<h2>All Bookings</h2>



<div class="container mt-4">
    <h2 class="mb-4">All Bookings</h2>

    @if (Model != null && Model.Any())
    {
        foreach (var booking in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-primary text-white">
                    Booking #@booking.Id
                </div>
                <div class="card-body">
                    <p><strong>Date:</strong> @booking.BookingDate.ToShortDateString()</p>
                    <p><strong>Start Time:</strong> @booking.StartTime</p>
                    <p><strong>End Time:</strong> @booking.EndTime</p>
                    <p><strong>Guests:</strong> @booking.NumberOfGuests</p>
                    <p><strong>Status:</strong> @booking.Status</p>
                    <p><strong>Special Requests:</strong> @booking.SpecialRequests</p>
                    <p><strong>Customer Id:</strong> @booking.CustomerId</p>
                    <p><strong>Table Id:</strong> @booking.TableId</p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-warning">Edit</a>

                    <form asp-action="Delete" asp-controller="Booking" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@booking.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this booking?');">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            No bookings found.
        </div>
    }
</div>
