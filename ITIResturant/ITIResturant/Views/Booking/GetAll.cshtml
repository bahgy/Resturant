
@using Restaurant.BLL.Model_VM.Booking

@model List<GetAllBookingVM>


@{
    ViewData["ActivePage"] = "GetAll"; // عشان يظبط الزرار Active
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@section Sidebar {
    <div class="card shadow-sm border-0" style="width: 250px;">
        <div class="card-header text-center fw-bold" style="background-color:white; border:none; font-size:16px;">
            Booking
        </div>
        <ul class="list-group list-group-flush">
            <!-- Active Item -->
            <li class="list-group-item @(ViewData["ActivePage"]?.ToString() == "Create" ? "active" : "")"
                style="@(ViewData["ActivePage"]?.ToString() == "Create" ? "background-color:#D4A762; color:white; font-weight:600;" : "")">
                <a asp-action="Create" asp-controller="Booking" class="text-decoration-none @(ViewData["ActivePage"]?.ToString() == "Create" ? "text-white" : "text-dark") d-flex align-items-center">
                    <i class="bi bi-plus-circle me-2"></i> Create Booking
                </a>
            </li>

            <li class="list-group-item @(ViewData["ActivePage"]?.ToString() == "All" ? "active" : "")"
                style="@(ViewData["ActivePage"]?.ToString() == "GetAll" ? "background-color:#D4A762; color:white; font-weight:600;" : "")">
                <a asp-action="GetAll" asp-controller="Booking" class="text-decoration-none @(ViewData["ActivePage"]?.ToString() == "GetAll" ? "text-white" : "text-dark") d-flex align-items-center">
                    <i class="bi bi-list-ul me-2"></i> My Bookings
                </a>
            </li>

        </ul>

    </div>
}



<div class="container mt-4">
    <h2 class="mb-4">All Bookings</h2>

    @if (Model != null && Model.Any())
    {
        foreach (var booking in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-primary text-white">
                    Booking #@booking.Id
                </div>
                <div class="card-body">
                    <p><strong>Date:</strong> @booking.BookingDate.ToShortDateString()</p>
                    <p><strong>Start Time:</strong> @booking.StartTime</p>
                    <p><strong>End Time:</strong> @booking.EndTime</p>
                    <p><strong>Guests:</strong> @booking.NumberOfGuests</p>
                    <p><strong>Status:</strong> @booking.Status</p>
                    <p><strong>Special Requests:</strong> @booking.SpecialRequests</p>
                    <p><strong>Customer:</strong> @booking.CustomerId</p>
                    <p><strong>Table:</strong> @booking.TableId</p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-warning">Edit</a>

                    <form asp-action="Delete" asp-controller="Booking" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@booking.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this booking?');">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            No bookings found.
        </div>
    }
</div>
