
@using Restaurant.BLL.Model_VM.Booking

@model List<GetAllBookingVM>


@{
    ViewData["ActivePage"] = "GetAll"; // عشان يظبط الزرار Active
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@section Sidebar {
    <div class="card shadow-sm border-0" style="width: 250px;">
        <div class="card-header text-center fw-bold" style="background-color:white; border:none; font-size:16px;">
            @SharedLocalizer["Booking"]
        </div>
        <ul class="list-group list-group-flush">
            <!-- Active Item -->
            <li class="list-group-item @(ViewData["ActivePage"]?.ToString() == "Create" ? "active" : "")"
                style="@(ViewData["ActivePage"]?.ToString() == "Create" ? "background-color:#D4A762; color:white; font-weight:600;" : "")">
                <a asp-action="Create" asp-controller="Booking" class="text-decoration-none @(ViewData["ActivePage"]?.ToString() == "Create" ? "text-white" : "text-dark") d-flex align-items-center">
                    <i class="bi bi-plus-circle me-2"></i>  @SharedLocalizer["Booking"]
                </a>
            </li>

            <li class="list-group-item @(ViewData["ActivePage"]?.ToString() == "All" ? "active" : "")"
                style="@(ViewData["ActivePage"]?.ToString() == "GetAll" ? "background-color:#D4A762; color:white; font-weight:600;" : "")">
                <a asp-action="GetAll" asp-controller="Booking" class="text-decoration-none @(ViewData["ActivePage"]?.ToString() == "GetAll" ? "text-white" : "text-dark") d-flex align-items-center">
                    <i class="bi bi-list-ul me-2"></i> @SharedLocalizer["All Bookings"]
                </a>
            </li>

        </ul>

    </div>
}


<div class="container mt-4">
    <h2 class="mb-4 text-center fw-bold"> @SharedLocalizer["All Bookings"]</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var booking in Model)
            {
                <div class="col-12 col-md-6">
                    <div class="card shadow-lg border-0 rounded-3 h-100">
                        <!-- Header -->
                        <div class="card-header text-white fw-bold text-center"
                             style="background: linear-gradient(135deg,#D4A762,#b3874a); font-size:18px;">
                            @SharedLocalizer["Booking"]  # @booking.Id
                        </div>

                        <!-- Body -->
                        <div class="card-body p-4" style="background-color:#fdfdfd; font-size:15px;">
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <span class="text-muted"><i class="bi bi-calendar-check me-2 text-primary"></i> Date</span>
                                <span class="fw-semibold">@booking.BookingDate.ToShortDateString()</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <span class="text-muted"><i class="bi bi-clock me-2 text-success"></i> Start</span>
                                <span class="fw-semibold">@booking.StartTime.ToShortTimeString()</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <span class="text-muted"><i class="bi bi-clock-history me-2 text-danger"></i> End</span>
                                <span class="fw-semibold">@booking.EndTime.ToShortTimeString()</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <span class="text-muted"><i class="bi bi-people me-2 text-info"></i> Guests</span>
                                <span class="fw-semibold">@booking.NumberOfGuests</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <span class="text-muted"><i class="bi bi-flag me-2 text-warning"></i> Status</span>
                                <span class="fw-semibold
                                                            @(booking.Status.ToString() == "Completed" || booking.Status.ToString() == "Booked" ? "text-success" : booking.Status.ToString() == "Cancelled" ? "text-warning" : "text-danger")">
                                    @booking.Status
                                </span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <span class="text-muted"><i class="bi bi-chat-left-dots me-2 text-secondary"></i> Requests</span>
                                <span class="fw-semibold text-truncate" style="max-width:150px;">@booking.SpecialRequests</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <span class="text-muted"><i class="bi bi-person me-2 text-dark"></i> Customer</span>
                                <span class="fw-semibold">@booking.CustomerId</span>
                            </div>
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-muted"><i class="bi bi-grid-1x2-fill me-2 text-primary"></i> Table</span>
                                <span class="fw-semibold">@booking.TableId</span>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="card-footer d-flex justify-content-between align-items-center" style="background-color:#fafafa;">
                            <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-primary px-3">
                                <i class="bi bi-pencil-square"></i>  @SharedLocalizer["Edit"]
                            </a>
                            <form asp-action="Delete" asp-controller="Booking" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@booking.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger px-3"
                                        onclick="return confirm('Are you sure you want to delete this booking?');">
                                    <i class="bi bi-trash3"></i> @SharedLocalizer["Delete"]
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> @SharedLocalizer["No bookings found"]
        </div>
    }
</div>
